@model HaGe.Application.Models.LevelModel
@{
    ViewData["Title"] = "Game";	
	KTTheme.AddVendors(new string[] {"amcharts", "amcharts-maps", "amcharts-stock"});
	KTTheme.AddJavascriptFile("js/custom/account/Attempt.js");
}
<input hidden id="LevelId" name="LevelId" value="@Model.Id" />
<!--begin::Row-->
<div class="row g-5 g-xl-10 mb-5 mb-xl-10">
	<div class="col-md-6 col-lg-6 col-xl-6 col-xxl-6 mb-md-5 mb-xl-10">
		<!--begin::Col-->
		<div class="row mb-10">
			<div class="col-md-12 col-lg-12 col-xl-12 col-xxl-12 mb-md-5 mb-xl-10"><div class="card card-flush h-md-100 mb-5">
				<!--begin::Header-->
				<div class="card-header pt-5">
					<!--begin::Title-->
					<div class="card-title d-flex flex-column">
						<!--begin::Info-->
						<div class="d-flex align-items-center">
							<!--begin::Currency-->
							<span class="fs-2hx fw-bold text-dark me-2 lh-1 ls-n2">Level Objective</span>
						</div>
						<!--end::Info-->
					</div>
					<!--end::Title-->
				</div>
				<!--end::Header-->
				<!--begin::Card body-->
				<div class="card-body pt-2 pb-4 d-flex flex-wrap align-items-center">
					<!--begin::Labels-->
					<div class="d-flex flex-column content-justify-center flex-row-fluid">
						<!--begin::Label-->
						<div class="d-flex fw-semibold align-items-center">
							<!--begin::Label-->
							<div class="text-gray-500 flex-grow-1 me-4">
								<p style="font-size: 17px;">By the end of this level you should be able to sign the word <strong id="name">@Model.Name</strong> to prepare you for the quiz
								</p>
							</div>
							<!--end::Stats-->
						</div>
						<!--end::Label-->
					</div>
					<!--end::Labels-->
				</div>
				<!--end::Card body-->
			</div></div>
			@if (!string.IsNullOrEmpty(Model.VideoUrl)) {
				<video height="345" autoplay muted controls>
					<source src="@Model.VideoUrl" type="video/mp4">
					@* <source src="movie.ogg" type="video/ogg"> *@
					Your browser does not support the video tag.
				</video>
			}
			else {
				<iframe height="345" src="https://www.youtube.com/embed/Raa0vBXA8OQ" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
			}
			
		</div>
			<div class="row">
				<div class="col-md-12 col-lg-12 col-xl-12 col-xxl-6 mb-md-5">
					<partial name='~/Views/Partials/Widgets/Cards/_Widget20.cshtml'/>
					@* <partial name='~/Views/Partials/Widgets/Cards/_Widget7.cshtml'/> *@
				</div>
				<!--end::Col-->
				<!--begin::Col-->
				<div class="col-md-12 col-lg-12 col-xl-12 col-xxl-6 mb-md-5">
					<partial name='~/Views/Partials/Widgets/Cards/_Widget17.cshtml'/>
					@* <partial name='~/Views/Partials/Widgets/Lists/_Widget26.cshtml'/> *@
				</div>
				<!--end::Col-->
			</div>
		</div>
	
	<!--begin::Col-->
	<div class="col-md-6 col-lg-6 col-xl-6 col-xxl-6 mb-md-5 mb-xl-10">
		@await Component.InvokeAsync("VideoFootageComponent", new {httpContext = Context, levelId = Model.Id})
		@* <partial name='~/Views/Partials/Widgets/Engage/_Widget10.cshtml' /> *@
	</div>
	<!--end::Col-->
</div>
